{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist/types",
    "lib": ["dom", "esnext"],
    "outDir": "./dist",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": false 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "example"]
}